@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h1>Edit @Model.MachineName's information</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName, "Name: ")
  @Html.TextBoxFor(model => model.MachineName)
  <input type="submit" value="Save"/> <hr>

}

<p>@Html.ActionLink($"Back to {Model.MachineName}'s Details", "Details", new { id = Model.MachineId})</p> 