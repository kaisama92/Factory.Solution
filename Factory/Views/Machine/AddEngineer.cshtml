@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Assign a Machine to @Html.DisplayFor(model => model.MachineName)</h1>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select an Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

@Html.ActionLink("Cancel", "Details", new { id = Model.MachineId })