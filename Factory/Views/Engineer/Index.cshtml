@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Engineers</h1>

@if (Model.Count == 0)
{
  <h2>You haven't added any Engineers. Click @Html.ActionLink("here", "Create") to add an Engineer.</h2>
}

<ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

@if(Model.Count != 0)
{
  <p>@Html.ActionLink("Add Another Engineer", "Create")</p>
}

<p>@Html.ActionLink("See all Machines", "Index", "Machine")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>