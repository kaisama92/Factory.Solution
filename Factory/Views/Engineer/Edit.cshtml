@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h1>Edit @Model.EngineerName's information</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.EngineerName, "Name: ")
  @Html.TextBoxFor(model => model.EngineerName)
  <input type="submit" value="Save"/> <hr>

}

<p>@Html.ActionLink($"Back to {Model.EngineerName}'s Details", "Details", new { id = Model.EngineerId})</p> 